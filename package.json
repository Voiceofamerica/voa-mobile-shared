{
  "name": "@voiceofamerica/voa-shared",
  "version": "2.1.3",
  "description": "Shared code and components",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf commonStyles components coverage helpers jestCache",
    "prepare": "run-s clean scss:types compile files:copy",
    "compile": "tsc --project ./tsconfig.json",
    "test": "run-s -c test:*",
    "test:unit": "jest --config jest.json",
    "test:storyshots": "jest --config jest.storybook.js",
    "testfix": "run-s -c testfix:*",
    "testfix:unit": "npm run test:unit -- -u",
    "testfix:storyshots": "npm run test:storyshots -- -u",
    "lint": "tslint --project .",
    "lintfix": "npm run lint -- --fix",
    "check": "run-s -c test lint prepare",
    "predeploy": "run-s test lint prepare",
    "deploy": "npm version ${LEVEL:-patch} && npm publish",
    "postdeploy": "git push --follow-tags",
    "deploy:minor": "LEVEL='minor' npm run deploy",
    "deploy:major": "LEVEL='major' npm run deploy",
    "files:copy": "cd src && rsync -Rr * --filter='+ *.scss' --filter='+ *.d.ts' --filter='+ *.gif' --filter='- *.tsx' --filter='- *.ts' --filter='- *.snap' ..",
    "scss:types": "tcm -p './src/**/*.scss'",
    "scss:types:watch": "npm run scss:types -- -w",
    "storybook": "run-p storybook:start storybook:open",
    "storybook:start": "start-storybook -p 6006",
    "storybook:open": "sleepms 3000 && opn 'http://localhost:6006/'",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/excellaco/voa-mobile-shared.git"
  },
  "bugs": {
    "url": "https://github.com/excellaco/voa-mobile-shared/issues"
  },
  "homepage": "https://github.com/excellaco/voa-mobile-shared#readme",
  "devDependencies": {
    "@storybook/addon-knobs": "^3.2.17",
    "@storybook/addon-storyshots": "^3.2.17",
    "@storybook/react": "^3.2.17",
    "@types/cordova": "0.0.34",
    "@types/enzyme": "^3.1.0",
    "@types/enzyme-adapter-react-16": "^1.0.0",
    "@types/hls.js": "^0.8.1",
    "@types/jest": "^21.1.4",
    "@types/moment": "^2.13.0",
    "@types/react": "^16.0.41",
    "@types/react-swipeable": "^4.2.0",
    "@types/react-test-renderer": "^16.0.0",
    "@types/react-virtualized": "^9.18.0",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__addon-knobs": "^3.2.1",
    "@types/storybook__react": "^3.0.5",
    "@types/uuid": "^3.4.3",
    "@types/webpack": "^3.8.1",
    "@types/webpack-env": "^1.13.2",
    "awesome-typescript-loader": "^3.3.0",
    "babel-loader": "^7.1.2",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "file-loader": "^1.1.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "json-loader": "^0.5.7",
    "moment": "^2.19.2",
    "node-sass": "^4.6.1",
    "npm-run-all": "^4.1.1",
    "opn-cli": "^3.1.0",
    "react": "^16.2.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "16.0.0-beta.5",
    "resolve-url-loader": "^2.2.0",
    "rxjs": "^5.5.2",
    "sass-loader": "^6.0.6",
    "sleep-ms": "^2.0.1",
    "style-loader": "^0.19.0",
    "ts-jest": "^21.1.3",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^6.0.1",
    "typed-css-modules": "^0.3.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "abortcontroller-polyfill": "^1.1.8",
    "hls.js": "^0.9.0",
    "react-images": "^0.5.17",
    "react-photo-gallery": "^6.0.22",
    "react-swipeable": "^4.2.0",
    "react-virtualized": "^9.18.5",
    "typescript": "^2.8.1",
    "uuid": "^3.2.1"
  },
  "peerDependencies": {
    "moment": "^2.19.2",
    "react": "^16.2.0",
    "rxjs": "^5.5.2"
  }
}
