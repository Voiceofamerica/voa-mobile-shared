{
  "name": "@voiceofamerica/voa-shared",
  "version": "1.7.1",
  "description": "Shared code and components",
  "main": "index.js",
  "scripts": {
    "prepare": "run-s scss:types compile files:copy",
    "compile": "tsc --project ./tsconfig.json",
    "test": "run-s -c test:unit test:storyshots",
    "test:unit": "jest --config jest.json",
    "test:storyshots": "jest --config jest.storybook.js",
    "lint": "tslint --project .",
    "check": "run-s -c test lint postinstall",
    "clean": "git clean -X -f",
    "files:copy": "cd src && rsync -Rr * --filter='+ *.scss' --filter='+ *.d.ts' --filter='+ *.gif' --filter='- *.tsx' --filter='- *.ts'  ..",
    "scss:types": "tcm -p './src/**/*.scss'",
    "scss:types:watch": "npm run scss:types -- -w",
    "storybook": "run-p storybook:start storybook:open",
    "storybook:start": "start-storybook -p 6006",
    "storybook:open": "sleepms 3000 && opn 'http://localhost:6006/'",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/excellaco/voa-mobile-shared.git"
  },
  "bugs": {
    "url": "https://github.com/excellaco/voa-mobile-shared/issues"
  },
  "homepage": "https://github.com/excellaco/voa-mobile-shared#readme",
  "devDependencies": {
    "@storybook/addon-knobs": "^3.2.17",
    "@storybook/addon-storyshots": "^3.2.17",
    "@storybook/react": "^3.2.17",
    "@types/enzyme": "^3.1.0",
    "@types/enzyme-adapter-react-16": "^1.0.0",
    "@types/jest": "^21.1.4",
    "@types/moment": "^2.13.0",
    "@types/react": "^15.6.4",
    "@types/react-native": "^0.49.2",
    "@types/react-test-renderer": "^16.0.0",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__addon-knobs": "^3.2.1",
    "@types/storybook__react": "^3.0.5",
    "@types/webpack": "^3.8.1",
    "@types/webpack-env": "^1.13.2",
    "awesome-typescript-loader": "^3.3.0",
    "babel-loader": "^7.1.2",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "file-loader": "^1.1.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "json-loader": "^0.5.7",
    "moment": "^2.19.2",
    "node-sass": "^4.6.1",
    "opn-cli": "^3.1.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "16.0.0-beta.5",
    "resolve-url-loader": "^2.2.0",
    "rxjs": "^5.5.2",
    "sass-loader": "^6.0.6",
    "sleep-ms": "^2.0.1",
    "style-loader": "^0.19.0",
    "ts-jest": "^21.1.3",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^6.0.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "npm-run-all": "^4.1.1",
    "typed-css-modules": "^0.3.0",
    "typescript": "^2.5.3"
  },
  "peerDependencies": {
    "moment": "^2.19.2",
    "react": "^16.0.0",
    "rxjs": "^5.5.2"
  }
}
