{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "skipLibCheck": true,
    "outDir": "."
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**/*",
    "./**/*.spec.tsx",
    "./**/*.story.tsx"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
